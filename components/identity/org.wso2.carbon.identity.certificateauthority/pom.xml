<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>identity</artifactId>
        <version>4.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>bundle</packaging>

    <artifactId>org.wso2.carbon.identity.certificateauthority</artifactId>
    <name>Certificate Authority Services Component</name>

    <dependencies>
        <dependency>
            <groupId>com.google.code.jscep.wso2</groupId>
            <artifactId>jscep</artifactId>
        </dependency>

        <dependency>
            <groupId>org.bouncycastle.wso2</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle.wso2</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.base</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core.services</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.base</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.certificateauthority.common</artifactId>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>org.wso2.carbon.identity.certificateauthority.internal,
                        </Private-Package>
                        <Import-Package>
                            javax.servlet,
                            javax.servlet.http,
                            javax.security.auth.*,
                            javax.xml.namespace,
                            org.apache.axiom.om,
                            org.apache.commons.lang,
                            org.apache.commons.io;version="2.0.0",
                            org.apache.commons.logging.*; version="1.0.4",
                            org.bouncycastle.asn1; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.cms; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.ocsp; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.pkcs; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.x500; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.x500.style; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.asn1.x509; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.cert; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.cert.jcajce; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.cert.ocsp; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.jce.provider; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.openssl; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.operator; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.operator.jcajce; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.pkcs; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.pkcs.jcajce; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.cms; version="${imp.pkg.version.bcpkix}",
                            org.bouncycastle.util; version="${imp.pkg.version.bcprov}",
                            org.bouncycastle.util.encoders; version="${imp.pkg.version.bcprov}",
                            org.jscep.message,
                            org.jscep.asn1,
                            org.jscep.transaction,
                            org.jscep.transport.request,
                            org.jscep.transport.response,
                            org.osgi.framework,
                            org.osgi.service.*,
                            org.slf4j,
                            org.wso2.carbon.core.*,
                            org.wso2.carbon.registry.core.*,
                            org.wso2.carbon.security.keystore,
                            org.wso2.carbon.security.keystore.service,
                            org.wso2.carbon.context.*,
                            org.wso2.carbon.identity.*,
                            org.wso2.carbon.user.*,
                            org.wso2.carbon.base.*,
                            org.wso2.carbon.user.core.service,
                            org.wso2.carbon.user.core.util
                        </Import-Package>
                        <Export-Package>!org.wso2.carbon.identity.certificateauthority.internal,
                            org.wso2.carbon.identity.certificateauthority.*;version=${project.version}
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>
